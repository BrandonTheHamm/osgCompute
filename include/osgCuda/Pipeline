#ifndef OSGCUDA_PIPELINE
#define OSGCUDA_PIPELINE 1

#include <osgCompute/Pipeline>
#include "osgCuda/Export"
#include "osgCuda/Context"

namespace osgCuda
{
    /**
    */
    class LIBRARY_EXPORT Pipeline : public osgCompute::Pipeline
    {
    public:
        Pipeline();

        META_Pipeline( this, this, osgCompute, PipelineBin, osgCuda, Context )
        META_Object( osgCuda, Pipeline )

        virtual void clear();

    protected:
        virtual ~Pipeline() { clearLocal(); }
        void clearLocal();
        
    private:
        // copy constructor and operator should not be called
        Pipeline( const Pipeline&, const osg::CopyOp& ) {}
        Pipeline &operator=(const Pipeline &) { return *this; }
    };
}

#endif //OSGCUDA_PIPELINE
