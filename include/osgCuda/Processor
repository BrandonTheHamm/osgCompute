#ifndef OSGCUDA_PROCESSOR
#define OSGCUDA_PROCESSOR 1

#include <osgCompute/Processor>
#include "osgCuda/Export"
#include "osgCuda/Context"

namespace osgCuda
{
    /**
    */
    class LIBRARY_EXPORT Processor : public osgCompute::Processor
    {
    public:
        Processor();

        META_Processor( this, this, osgCompute, ProcessorBin, osgCuda, Context )
        META_Object( osgCuda, Processor )

        virtual void clear();

    protected:
        virtual ~Processor() { clearLocal(); }
        void clearLocal();
        
    private:
        // copy constructor and operator should not be called
        Processor( const Processor&, const osg::CopyOp& ) {}
        Processor &operator=(const Processor &) { return *this; }
    };
}

#endif //OSGCUDA_PROCESSOR
